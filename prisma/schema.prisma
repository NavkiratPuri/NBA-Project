model player {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  Rk            Int?
  Player        String?
  Pos           String?
  Age           Int?
  Tm            String?
  G             Int?
  GS            Int?
  MP            Float?
  FG            Float?
  FGA           Float?
  FGPercent     Float?
  threeP        Float?
  threePA       Float?
  threePPercent Float?
  twoP          Float?
  twoPA         Float?
  twoPPercent   Float?
  eFGPercent    Float?
  FT            Float?
  FTA           Float?
  FTPercent     Float?
  ORB           Float?
  DRB           Float?
  TRB           Float?
  AST           Float?
  STL           Float?
  BLK           Float?
  TOV           Float?
  PF            Float?
  PTS           Float?
}

model playerImages {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  Player String
  ImageSource  String
}

model team {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  rk         Int?
  team       String?
  wins       Int?
  losses     Int?
  eastWins   Int?
  eastLosses Int?
  westWins   Int?
  westLosses Int?
  conference String?
}

model trivia {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  question      String?
  optionA       String?
  optionB       String?
  optionC       String?
  optionD       String?
  correctAnswer String?
}

//new models for auth and custom profile testing

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  hashedPassword String?
  image          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favPlayerId String?
  favTeamId   String?
  isAdmin     Boolean @default(false)
  highScoreHL   Int?    @default(0)
  highScoreT  Int?    @default(0)
  highScoreTrivia  Int?    @default(0)

  accounts Account[]

  //  favPlayer      Player   @relation(fields: [favPlayerId], references: [id])
  //  favTeam        Team     @relation(fields: [favTeamId], references: [id])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

